<div class="panel panel-primary" style="border: none">
  <div class="panel-heading" style="background-color: #FFEAE5; border: none; color: #000;">
    <div class="row">
      <div class="col-md-4">
      <%= image_tag current_user.avatar.url, size:50 %>
      </div>
      <div class="col-md-8">
        <div class="row user-profile-name">
          <%= current_user.name %>
        </div>
         <div class="row">
          @<%= current_user.username %>
         </div>
         <div class="row">
          Location: <%= current_user.location %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-body">
      <div class="row user-profile">
        <div class="col-md-4">
        Tweets
        </div>
        <div class="col-md-4">
        Following
        </div>
        <div class="col-md-4">
        Followers
        </div>
      </div>
      <div class="row user-profile">
        <div class="col-md-4">
        <%= current_user.tweets.count %>
        </div>
        <div class="col-md-4">
        <%= current_user.following.count %>
        </div>
        <div class="col-md-4">
        <%= followed_by(current_user) %>
        </div>
      </div> 

    <div class="row user-profile">
      <br>
      <%= link_to "Edit Profile", edit_user_registration_path %>
    </div>
  </div>
</div>