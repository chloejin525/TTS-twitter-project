<div class="tweet-area">
<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message.html_safe %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-1">
      <%= image_tag current_user.avatar.url, size:50, class: "user-pic-nav" %>
    </div>
    <div class="col-md-11">
      <div class="form-group">
        <%= form.text_area :message, placeholder: "What's happening?", class: "form-control", rows: "3" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.submit "Tweet It!", class: "btn btn-default new-tweet-btn" %>
  </div>
<% end %>
</div>
